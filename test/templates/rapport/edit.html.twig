                                                            <div class="accordion-heading equipamento">
                                                                <div class="accordion-toggle upperCase">
                                                                    {% if bloc.titre_edit == 0 %}
                                                                    <a id="blocPen_{{ bloc.id }}" href="#" onclick="openTitreModal({{ bloc.id }},'{{ bloc.name|e('js') }}')"><i class="fas fa-pen fa-fw"></i></a>
                                                                   {% endif %}
