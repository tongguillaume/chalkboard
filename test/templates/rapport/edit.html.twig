                                                                            {% if key > last and boucle == true %}
                                                                                {% if bloc.ordre == 0 %}
                                                                                    {% include 'rapport/Components/edit/bloc_elem.html.twig' %}
                                                                                    {% set last = key %}
                                                                                {% else %}
