<div class="modal fade" id="endNoteModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ traduction.nouvelle_note_de_fin_de_document |trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input id="idEndNote" type="hidden"/>
                <label for="message-text" class="col-form-label"><b>{{ traduction.note_de_fin_de_document |trans }} : </b></label>

                <div class="form-group">
                    <textarea style="width: 100%" id="descEndNoteModalEdit" name="newComment">  </textarea>

                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label"><b>{{ traduction.emplacement_de_la_note |trans }} :</b>
                        <br>
                        ({{ traduction.choissiez_avec_votre_curseur |trans }})
                    </label>
                    <textarea id="motEndNoteModalEdit" style="width: 100%" rows="8" data-readonly="readonly"> </textarea>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ traduction.annuler |trans }}</button>
                    <button id="endNoteModalEditConfirm" type="submit" class="btn btn-custom-hceres" data-dismiss="modal">{{ traduction.confirmer |trans }}</button>

                </div>

            </div>

        </div>
    </div>
</div>

