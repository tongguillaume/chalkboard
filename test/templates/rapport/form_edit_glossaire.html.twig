<div class="modal fade" id="glossaireModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelEdit" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabelEdit">{{ traduction.modifier_glossaire |trans }}</h5>
      </div>
      <div id="para" class="modal-body">
          <input id="idGlossaire" type="hidden"/>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">{{ traduction.mot |trans }}: </label>
            <input id="newMot"/>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">{{ traduction.description |trans }}: </label>
            <textarea id="newDesc" name="editDescription">  </textarea>
            {#<input id="newComment"/>#}
          </div>
           
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ traduction.annuler |trans }}</button>
        <button id="glossaireModalEditConfirm"type="submit" class="btn btn-custom-hceres" data-dismiss="modal">{{ traduction.confirmer |trans }}</button>
       
      </div>
    </div>
  </div>
</div> 