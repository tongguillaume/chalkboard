<div class="modal fade" id="exampleModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelEdit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabelEdit">{{ traduction.modification_commentaire |trans }}</h5>
            </div>
            <div id="para" class="modal-body">
                <input id="idComment" type="hidden"/>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">{{ traduction.titre |trans }} : </label>
                    <input id="newTitre"/>
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label">{{ traduction.commentaire |trans }} : </label>
                    <textarea id="newComm" name="editComment">  </textarea>
                    {#<input id="newComment"/>#}
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ traduction.annuler |trans }}</button>
                <button id="modalCommentaireConfirm" type="submit" class="btn btn-primary" data-dismiss="modal">{{ traduction.confirmer |trans }}</button>

            </div>
        </div>
    </div>
</div>