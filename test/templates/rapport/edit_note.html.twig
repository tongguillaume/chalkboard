{% extends 'home/base.html.twig' %}

{% block title %}Edit note{% endblock %}

{% block content %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            {#//////////////////////////////////////////////////////////////////////#}
            {#//////////////////////////////////////////////////////////////////////#}
