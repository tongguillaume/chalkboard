{% extends 'home/base.html.twig' %}

{% block title %}SystemDroit{% endblock %}

{% block content %}
    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb breadcrumb-custom" style="padding-left: 6px">
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}/">{{ traduction.accueil |trans }}</a>
                </li>
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}/admin/roles/">{{ traduction.roles |trans }}</a>
                </li>
                <li class="breadcrumb-item active">Rôle {{ role.nom }}</li>
            </ol>
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 style="color: #ED145B" class="mb-0">
                        Rôle {{ role.nom }}
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ role.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ traduction.nom_abrege |trans }}</th>
                                <td>{{ role.nomAbrege }}</td>
                            </tr>
                            <tr>
                                <th>{{ traduction.nom |trans }}</th>
                                <td>{{ role.nom }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row justify-content-center">
                        <form method="post" class="ml-0" action="{{ path('role_delete', {'id': role.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <a href="{{ path('role_edit', {'id': role.id}) }}" style="color: #0069d9;"> <span class="fas fa-fw fa-edit"></span></a>
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}">
                            <button style="color: red; background: transparent" class="btn"><i class="fas fa-fw fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
