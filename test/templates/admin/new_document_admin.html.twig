{% extends 'home/base.html.twig' %}

{% block title %}New Document{% endblock %}

{% block body %}
    <h1>Create new Document</h1>

    {{ include('document/_form.html.twig') }}

    <a href="{{ path('document_index') }}">back to list</a>
{% endblock %}

{% block content %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb breadcrumb-custom" style="padding-left: 6px">
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}/">{{ traduction.accueil|trans }}</a>
                </li>
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}/admin/documents/">{{ traduction.documents|trans }}</a>
                </li>
                <li class="breadcrumb-item active">{{ traduction.ajouter_un_document |trans}}</li>
            </ol>
            <h1>{{ traduction.ajouter_un_document |trans}}</h1>
            <!-- /.container-fluid -->
            {# form_widget(form) #}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="ml-5 col-md-8 mb-5" id ="accordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                            <a class="btn btn-link plusandminus"  href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <i class="fas fa-minus"></i> {{ traduction.fiche_document |trans}}
                            </a>
                        </h5>
                    </div>
                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                            {{ form_label(form.id_SystemDroit) }}
                            {{ form_widget(form.id_SystemDroit) }}
                            {{ form_label(form.deadline) }}
                            {{ form_widget(form.deadline) }}
                            {{ form_label(form.date_mad) }}
                            {{ form_widget(form.date_mad) }}
                            <label class="my-2"> Liste des Ã©valuations</label>
                            {% for widget in form.evaluations %}
                                {{ form_widget(widget) }} {{ form_label(widget) }}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- Sticky Footer -->


        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}