{% extends 'home/base.html.twig' %}

{% block content %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb breadcrumb-custom" style="padding-left: 6px">
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}/">{{ traduction.accueil |trans }}</a>
                </li>
                <li class="breadcrumb-item breadcrumb-item-custom">
                    <a href="{{ app.request.getBaseURL()  }}">{{ app.session.get("evaluation") }}</a>
                </li>
                <li class="breadcrumb-item active">{{ traduction.tableau_de_bord |trans }}</li>
            </ol>


            <h3>{{ traduction.tableau_de_bord |trans }}</h3>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Documents</h5>
                            <p class="card-text">Documents : 5<br>
                                {{ traduction.documents_en_cours_d_edition |trans }} : 4<br>
                                {{ traduction.documents_valides |trans }} : 1<br>
                                {{ traduction.taux_de_progression |trans }} :
                            </p>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Notes</h5>
                            <p class="card-text">Notes : 38<br>
                                {{ traduction.note_a_resoudre }} : 8<br>
                                {{ traduction.notes_resolus | trans }} : 30<br>
                                {{ traduction.taux_de_progression |trans }}  :
                            </p>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: 78%;" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100">78%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ traduction.etat |trans }}</h5>
                            <p class="card-text">
                                TEXT
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ traduction.collaborateur |trans }}</h5>
                            <p class="card-text">
                                {{ traduction.charge_d_etudes | trans }} : 15<br>
                                {{ traduction.charge_de_gestion_des_evaluations | trans }} : 2<br>
                                {{ traduction.gestionnaire_administratif | trans}} : 3<br>
                                {{ traduction.charge_de_mission_scientifique | trans}} : 8<br>
                                {{ traduction.charge_de_projets |trans }} : 1<br>
                                Conseiller(ère) scientifique : 8<br>
                                Conseiller(ère) scientifique coordinateur(trice) : 1<br>
                                Conseiller(ère) scientifique pilote :2<br>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">BLOC</h5>
                            <p class="card-text">
                                TEXT
                            </p>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Sticky Footer -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}