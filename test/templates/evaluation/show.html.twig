{% extends 'home/base.html.twig' %}

{% block title %}SystemDroit{% endblock %}

{% block content %}
    <div id="content-wrapper">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 style="color: #ED145B" class="mb-0">
                        {{traduction.evaluation | trans}} {{ evaluation.nom }}
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ evaluation.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ traduction.nom | trans }}</th>
                            <td>{{ evaluation.nom }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row justify-content-center">
                        <form method="post" class="ml-0" action="{{ path('evaluation_delete', {'id': evaluation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <a href="{{ path('evaluation_edit', {'id': role.id}) }}" style="color: #0069d9;"> <span class="fas fa-fw fa-edit"></span></a>
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evaluation.id) }}">
                            <button style="color: red; background: transparent" class="btn"><i class="fas fa-fw fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
