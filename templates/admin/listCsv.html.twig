{% extends 'base.html.twig' %}

{% block body %}
    <!-- Inbox area Start-->
    <div class="data-table-area" style="margin-bottom: 5%">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd"></div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 90%">Nom du Fichier</th>
                                        <th>
                                            <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#import-csv">Importer un CSV</button>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for File in  FilesCsv %}
                                    <tr>
                                        <td>{{ File }}</td>
                                        <td>
                                            <a href="{{ path('app_download_csv', {'filename' : File}) }}" title="Télécharger le fichier">
                                                <i style="margin-left: 40%" class="material-icons">
                                                    arrow_drop_down_circle
                                                </i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Inbox area End-->

    <div class="modal fade" id="import-csv" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document" style="background-color:#F0F8FF;">
            <div class="modal-content">
                <div class="modal-header">
                    <h>Importer un fichier CSV</h>
                </div>
            </div>
            <div class="modal-body">
                {% include 'admin/importCsv.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
